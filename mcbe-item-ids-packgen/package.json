{
    "name": "mcbe-item-ids-packgen",
    "version": "1.0.0",
    "description": "MCBE Item IDs package generator",
    "main": "dist/index.js",
    "bin": {
        "mcbe-item-ids-packgen": "dist/index.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/JohnScience/mcbe-item-ids"
    },
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "ts-node src/index.ts",
        "dev:local": "ts-node src/index.ts -i ../mcbe-item-ids-scraper/output/latest.json",
        "dev:fresh": "cd ../mcbe-item-ids-scraper && npm run scrape:latest && cd ../mcbe-item-ids-packgen && npm run dev:local && cd ../mcbe-item-ids && npm install && npm test"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/node": "^25.0.9",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.2"
    },
    "dependencies": {
        "commander": "^14.0.2"
    }
}